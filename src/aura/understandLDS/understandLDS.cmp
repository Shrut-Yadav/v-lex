<aura:component implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId">
    
    <aura:attribute name="recordId" type="String" />    
    <aura:attribute name="targetRec" type="Object" />
    <aura:attribute name="simpleRec" type="Object" />
    <aura:attribute name="error" type="String" />
    
    <force:recordData aura:id="record"
                      recordId="{!v.recordId}"
                      layoutType="FULL"
                      targetRecord="{!v.targetRec}"
                      targetError="{!v.error}"/>
    
    <div class="Record Details">
        <lightning:card iconName="standard:lead" title="{!v.targetRec.fields.Name.value}">
            <div class="slds-p-horizontal--small">
                
                <lightning:formattedText value="{!v.targetRec.fields.Name.value}" /> 
                <lightning:formattedText value="{!v.targetRec.fields.AccountName.value}" />
                <lightning:formattedText value="{!v.targetRec.fields.LeadSource.value}" /> <br />  
                
                <lightning:button label="save" onclick="{! c.handleSave }"/>
                
            </div>
            
            
            
        </lightning:card>
    </div>
    
    <aura:if isTrue="{!not(empty(v.error))}">
        <div class="error">
            {!v.error}
        </div>
    </aura:if>
</aura:component>